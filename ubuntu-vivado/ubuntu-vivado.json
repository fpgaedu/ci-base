{
  "builders": [
    {
      "headless": "{{ user `headless`}}",
      "output_directory": "output-{{user `os_name`}}-vivado-{{user `vivado_version`}}-{{user `vivado_edition`}}-virtualbox-ovf",
      "post_shutdown_delay": "1m",
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
      "source_path": "{{user `ovf_source_path`}}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "5m",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--nictype1", "virtio"
        ],
        [
          "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "output-vagrant-box/{{user `os_name`}}/vivado-{{user `vivado_version`}}-{{user `vivado_edition`}}/{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{user `vivado_install_archive_path`}}",
      "destination": "/tmp/vivado_install_archive.tar.gz"
    },
    {
      "type": "file",
      "source": "{{user `vivado_install_config_path`}}",
      "destination": "/tmp/vivado_install_config.txt"
    },
    {
      "type": "shell",
      "environment_vars": [
        "VIVADO_INSTALL_ARCHIVE=/tmp/vivado_install_archive.tar.gz",
        "VIVADO_INSTALL_CONFIG=/tmp/vivado_install_config.txt",
        "VIVADO_INSTALL_PATH={{user `vivado_install_path`}}",
        "XILINX_INSTALL_PATH={{user `xilinx_install_path`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/vivado.sh",
        "script/minimize.sh",
        "script/cleanup.sh"
      ]
    }
  ],
  "variables": {
    "cpus": "2",
    "disk_size": "65536",
    "headless": "true",
    "memory": "2048",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vagrantfile_template": "",
    "version": "0.1.0",
    "virtualbox_guest_os_type": "Ubuntu_64",
    "os_name": "ubuntu",
    "ovf_source_path": "../ubuntu/output-ubuntu1604-virtualbox-iso/ubuntu1604.ovf",
    "vivado_version": "2016.4",
    "vivado_edition": "webpack",
    "vivado_install_archive_path": "Xilinx_Vivado_SDK_2016.4_0124_1.tar.gz",
    "vivado_install_config_path": "vivado/vivado_webpack_install_config.txt",
    "vivado_install_path": "/home/vagrant/Xilinx/Vivado/2016.4/",
    "xilinx_install_path": "/home/vagrant/Xilinx/"
  }
}

